

<% provide(:title, "Booker - #{@book.tittle}") %>

<div style="margin: 20px; width:60%;">


<div style="width:50%">
<p><h4 id="notice"><%= notice %></h4></p>
</div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('book.title') %></h3>
    </div>
    <div class="panel-body">
        <%= @book.tittle %>
    </div>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('book.author') %></h3>
    </div>
    <div class="panel-body">
        <%= @book.author %>
    </div>
  </div>


  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('book.description') %></h3>
    </div>
    <div class="panel-body">
        <%= @book.description %>
    </div>
  </div>



<%= link_to t('book.edit'), edit_book_path(@book), class:"btn btn-success", style:"color:#FFFFFF;" %> |
<%= link_to t('book.back'), books_path, class:"btn btn-info", style:"color:#FFFFFF;" %>

</div>
