

<%- title "Booker - #{@titulo}" %>

<div style="margin:20px;">

  <div style="width:50%">
  <p><h4 id="notice"><%= notice %></h4></p>
  </div>

<h1 style="text-align:center; margin-bottom:20px;"><%= t('book.show_book') %></h1>


  <%= form_tag(books_path, :method => "get", :id => "books_search", class:"navbar-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: t('book.search_t_a'), class:"form-control", style:"width:90%" %>
  <%= submit_tag t('book.search'), class:"btn btn-info"%>
  <% end %>

  <table class="table table-striped table-bordered" style="margin-top:20px;">
    <thead>
      <tr>
        <th style="text-align:center; background-color: #80cbc4;"><%= t('book.title') %></th>
        <th style="text-align:center; background-color: #80cbc4;"><%= t('book.Author') %></th>
        <th style="text-align:center; background-color: #80cbc4;"><%= t('book.description') %></th>
        <th colspan="3" style="text-align:center; background-color: #80cbc4;"><%= t('book.options') %></th>
      </tr>
    </thead>


  <tbody>



    <div id="libros">

      <% @books.each do |book| %>
        <%= sync partial: 'book', resource: book %>
      <!--, locals: {book:book} -->
        <% end %>
      <%= sync_new partial: 'book', resource: Book.new %>

    </div>



  </tbody>
</table>

<br>

<button class="btn btn-primary" type="button" style="float: right;">
  <%= t('book.count') %> <span class="badge"><%= @number_book %></span>
</button>

