


<table class="table table-striped table-bordered" style="margin-top:20px;">
  <thead>
    <tr>
      <th style="text-align:center; background-color: #80cbc4;">Titulo</th>
      <th style="text-align:center; background-color: #80cbc4;">Autor</th>
      <th style="text-align:center; background-color: #80cbc4;">Descripcion</th>
      <th colspan="3" style="text-align:center; background-color: #80cbc4;">Opciones</th>
    </tr>
  </thead>


<tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= book.tittle %></td>
    <td><%= book.author %></td>
    <td><%= book.description %></td>
    <td><%= link_to 'Mostrar', book, class:"btn btn-primary", style:"color:#FFFFFF;", title:"Mostrar libro"%></td>
    <td><%= link_to 'Editar', edit_book_path(book), class:"btn btn-warning", style:"color:#FFFFFF;", title:"Modificar libro" %></td>
    <td><%= link_to 'Eliminar', book, class:"btn btn-danger", style:"color:#FFFFFF;", title:"Eliminar libro",
    method: :delete, data: { confirm: 'Esta seguro que desea eliminar?' } %></td>
  </tr>
<% end %>
  </tbody>

</table>

<br>


<button class="btn btn-primary" type="button" style="float: right;">
  Cantidad de libros disponibles <span class="badge"><%= @number_book %></span>
</button>

