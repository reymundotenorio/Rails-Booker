


<div style="margin: 20px; width:60%;">


<div style="width:50%">
<p><h4 id="notice"><%= notice %></h4></p>
</div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Titulo</h3>
    </div>
    <div class="panel-body">
        <%= @book.tittle %>
    </div>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Autor</h3>
    </div>
    <div class="panel-body">
        <%= @book.author %>
    </div>
  </div>


  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title">Descripcion</h3>
    </div>
    <div class="panel-body">
        <%= @book.description %>
    </div>
  </div>



<%= link_to 'Editar', edit_book_path(@book), class:"btn btn-success", style:"color:#FFFFFF;" %> |
<%= link_to 'Atras', books_path, class:"btn btn-info", style:"color:#FFFFFF;" %>

</div>
