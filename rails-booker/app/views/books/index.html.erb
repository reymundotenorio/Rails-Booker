<p id="notice"><%= notice %></p>

<div style="margin:20px;">

<h1 style="text-align:center; margin-bottom:20px;">Lista de Libros</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="text-align:center;">Titulo</th>
      <th style="text-align:center;">Autor</th>
      <th style="text-align:center;">Descripcion</th>
      <th colspan="3" style="text-align:center;">Opciones</th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.tittle %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Mostrar', book, class:"btn btn-primary", style:"color:#FFFFFF;", title:"Mostrar libro"%></td>
        <td><%= link_to 'Editar', edit_book_path(book), class:"btn btn-warning", style:"color:#FFFFFF;", title:"Modificar libro" %></td>
        <td><%= link_to 'Eliminar', book, class:"btn btn-danger", style:"color:#FFFFFF;", title:"Eliminar libro",
        method: :delete, data: { confirm: 'Esta seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo libro', new_book_path, class: "btn btn-success", title:"Crear nuevo libro", style:"color:#FFFFFF;"%>
</div>
